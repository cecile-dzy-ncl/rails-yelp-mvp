<h1>New restaurant</h1>
<%= simple_form_for [@restaurant] do |f| %>
  <div class="form-group">
    <%= f.input :name, class: 'form-controls' %>
  </div>

  <div class="form-group">
    <%= f.input :address, class: 'form-controls' %>
  </div>

  <div class="form-group">
    <%= f.input :phone_number, class: 'form-controls' %>
  </div>

  <div class="form-group">
    <%= f.input :category, class: 'form-controls' %>
  </div>

  <div class="form-group">
    <%= f.submit "Add a restaurant", class: "btn btn-primary" %>
  </div>
<% end %>
